cabal-version: 3.0
name:          plutus-profiled-plugin-test
version:       0.1.0.0
build-type:    Simple
synopsis:      Minimal GHC plugin and test executable
category:      Development

library
  hs-source-dirs:   src
  exposed-modules:  SimplePlugin
  build-depends:
    , base  >=4.9 && <5
    , ghc

  default-language: Haskell2010

executable simple-plugin-test
  main-is:          SimpleMain.hs
  ghc-options:       -main-is SimpleMain
  hs-source-dirs:   src
  build-depends:
    , base                         >=4.9 && <5
    , plutus-profiled-plugin-test
    , ghc

  default-language: Haskell2010
