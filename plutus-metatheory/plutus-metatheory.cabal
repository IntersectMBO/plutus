cabal-version: 3.0
name:          plutus-metatheory
version:       1.47.0.0
synopsis:      Command line tool for running plutus core programs
homepage:      https://github.com/IntersectMBO/plutus
license:       Apache-2.0
license-files:
  LICENSE
  NOTICE

author:        James Chapman
maintainer:    james.chapman@iohk.io
category:      Development
build-type:    Simple
data-files:
  plutus-metatheory.agda-lib
  README.md
  src/**/*.lagda.md

custom-setup
  setup-depends:
    , base
    , Cabal
    , process
    , turtle   >=1.6

common lang
  default-language:   Haskell2010
  default-extensions:
    BangPatterns
    DeriveFoldable
    DeriveFunctor
    DeriveGeneric
    DeriveLift
    DeriveTraversable
    DerivingStrategies
    DerivingVia
    ExistentialQuantification
    ExplicitForAll
    FlexibleContexts
    GADTs
    GeneralizedNewtypeDeriving
    ImportQualifiedPost
    LambdaCase
    MultiParamTypeClasses
    NamedFieldPuns
    OverloadedStrings
    ScopedTypeVariables
    StandaloneDeriving
    TypeApplications
    TypeSynonymInstances

  ghc-options:
    -fwarn-incomplete-patterns -fno-warn-overlapping-patterns

common ghc-version-support
  -- See the section on GHC versions in CONTRIBUTING
  if (impl(ghc <9.6) || impl(ghc >=9.7))
    buildable: False

common os-support
  if (impl(ghcjs) || os(windows))
    buildable: False

library
  import:          lang, os-support, ghc-version-support
  hs-source-dirs:  src
  build-depends:
    , aeson
    , base
    , bytestring
    , composition-prelude
    , directory
    , extra
    , filepath
    , ghc-prim
    , ieee754
    , megaparsec
    , memory
    , mtl
    , optparse-applicative
    , plutus-core                      ^>=1.47
    , plutus-core:plutus-core-execlib
    , process
    , text
    , time
    , transformers

