(let (rec)
  (datatypebind (datatype
      (tyvardecl Nat (type))
      -- no arguments
      match_Nat
      (vardecl Zero Nat)
      (vardecl Suc (fun Nat Nat))))
(let (nonrec)
  (datatypebind (datatype
      (tyvardecl Bool (type))
      -- no arguments
      match_Bool
      (vardecl True Bool)
      (vardecl False Bool)))
  (termbind (strict) (vardecl three Nat)
      [Suc [Suc [Suc Zero]]])
(let (rec)
  (termbind (strict) (vardecl even (fun Nat Bool))
      (lam n Nat
        [{[match_Nat n] Bool} True (lam pred Nat [odd pred])]))
  (termbind (strict) (vardecl odd (fun Nat Bool))
      (lam n Nat
        [{[match_Nat n] Bool} False (lam pred Nat [even pred])]))
  [even three]
)
)
)
