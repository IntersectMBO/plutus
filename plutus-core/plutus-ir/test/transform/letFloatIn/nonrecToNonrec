(let (rec)
     (termbind (strict) (vardecl r (con integer))
               (let (nonrec)
                    -- since `i` is strictNonValue, it will not be moved/floated,
                    -- thus `i` will remain nonrec
                    (termbind (strict) (vardecl i (con integer))
                              (let (nonrec)
                                   (termbind (strict) (vardecl j (con integer)) r)
                                   j))
                    i))
      (con integer 3))
