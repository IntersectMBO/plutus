                 -Wincomplete-record-updates -Wredundant-constraints -Widentities
    build-depends:
        plutus-core -any,
        aeson-pretty -any,
        barbies -any,
        base -any,
        bytestring -any,
        cassava -any,
        exceptions -any,
        extra -any,
        inline-r -any,
        text -any,
        vector -any
    other-modules:
        CostModelCreation

