cabal-version: 1.18
name: plutus-validation-server
version: 0.1.0.0
license: Apache-2.0
license-file: LICENSE
copyright: Copyright: (c) 2019 IOHK
maintainer: vanessa.mchale@iohk.io
author: Vanessa McHale
build-type: Simple

source-repository head
    type: git
    location: https://github.com/input-output/plutus

flag development
    description:
        Enable `-Werror`
    default: False
    manual: True

executable plutus-validation-server
    main-is: Main.hs
    hs-source-dirs: src
    default-language: Haskell2010
    other-extensions: OverloadedStrings
    ghc-options: -threaded -rtsopts -with-rtsopts=-N -Wall
    build-depends:
        base -any,
        warp -any,
        wai -any,
        wallet-api -any,
        bytestring -any,
        http-types -any,
        aeson -any,
        base64-bytestring-type -any,
        serialise -any

    if flag(development)
        ghc-options: -Werror

    if impl(ghc >=8.0)
        ghc-options: -Wincomplete-uni-patterns -Wincomplete-record-updates
                     -Wredundant-constraints

    if impl(ghc >=8.4)
        ghc-options: -Wmissing-export-lists
