{% macro youtubeVideo(youtubeId) %}
  <div class="video-container relative w-100 pb-16/9 bg-black ">
    <iframe class="absolute top-0 left-0 right-0 border-0 h-full w-full hidden" data-src="https://www.youtube.com/embed/{{youtubeId}}?modestbranding=1" title="YouTube video player" frameborder="0" allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture" allowfullscreen="allowfullscreen"></iframe>
    <p class="absolute inset-0 flex flex-col justify-center text-white">We've embedded content from YouTube. As YouTube may collect personal data and track your viewing behaviour, we'll only load the video after you consent to their use of cookies and similar technologies as described in their
      <a class="text-blue" href="https://www.youtube.com/t/privacy">privacy policy.</a>
    </p>
  </div>
{% endmacro %}

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8"/>
    <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
    <script>
      window.segmentAnalyticsId = "{{ segmentAnalyticsId }}"
      window.googleAnalyticsId = "{{googleAnalyticsId}}"
    </script>
    <title>Marlowe: Financial smart contracts on Cardano blockchain</title>
    <meta name="description" content="Marlowe: create, test and run financial agreements. Peer-to-peer, secure and scalable DeFi solution. Marlowe makes finance accessible to all.">
    <meta property="og:title" content="Marlowe: Financial smart contracts on Cardano blockchain">
    <meta property="og:description" content="Marlowe: create, test and run financial agreements. Peer-to-peer, secure and scalable DeFi solution. Marlowe makes finance accessible to all.">
